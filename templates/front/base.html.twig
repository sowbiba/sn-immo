<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('front_app') }}
        {% endblock %}
    </head>
    <body{% if backgroundAdvertising is defined %} style="background-image: {{ asset('build/images/' ~ backgroundAdvertising.image) }};"{% endif %}>
        {% block body %}
            <div class="container-fluid">
                <div class="row">
                    {% block container %}
                        <div class="wrapper">
                            <div id="content" style="background: red;">
                                {% if backgroundAdvertising is defined %}
                                    <a href="{{ backgroundAdvertising.link }}" class="background-link"></a>
                                {% endif %}
                                <div class="container-fluid{% if container_class is defined %} {{ container_class }}{% endif %}">
                                    <div class="front-content" style="background: green;">
                                        {% block content %}{% endblock %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endblock %}
                </div>
            </div>
        {% endblock %}
        {% block modal %}{% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('front_app') }}
        {% endblock %}
    </body>
</html>
